<Window
    x:Class="DDSStudyOS.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDSStudyOS.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <NavigationView
            x:Name="NavView"
            PaneDisplayMode="Left"
            IsBackButtonVisible="Collapsed"
            SelectionChanged="NavView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Icon="Home" Tag="dashboard" />
                <NavigationViewItem Content="Cursos" Icon="Library" Tag="courses" />
                <NavigationViewItem Content="Materiais &amp; Certificados" Icon="Folder" Tag="materials" />
                <NavigationViewItem Content="Agenda" Icon="Calendar" Tag="agenda" />
                <NavigationViewItem Content="Navegador" Icon="Globe" Tag="browser" />
                <NavigationViewItem Content="Configurações" Icon="Setting" Tag="settings" />
                <NavigationViewItem Content="Desenvolvimento" Icon="Contact" Tag="dev" />
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <Border BorderBrush="#33000000" BorderThickness="0,1,0,0" Padding="12">
                    <StackPanel Spacing="8">
                        <Border Background="#221D4ED8" CornerRadius="8" Padding="10">
                            <StackPanel Spacing="2">
                                <TextBlock Text="Perfil ativo" FontSize="11" Opacity="0.8" />
                                <TextBlock x:Name="UserGreetingText" Text="Olá, estudante!" FontWeight="SemiBold" FontSize="14" />
                                <TextBlock x:Name="UserSubtitleText" Text="Configure seu cadastro inicial." FontSize="11" Opacity="0.8" />
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Pomodoro Focus" FontWeight="SemiBold" FontSize="12" Opacity="0.8"/>
                        <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                            <TextBlock x:Name="PomoTimerText" Text="25:00" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Consolas"/>
                            <Button x:Name="PomoActionBtn" Content="&#xE768;" FontFamily="Segoe MDL2 Assets" Click="PomoAction_Click" ToolTipService.ToolTip="Iniciar/Pausar"/>
                            <Button x:Name="PomoResetBtn" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Click="PomoReset_Click" ToolTipService.ToolTip="Parar"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                            <HyperlinkButton Content="Foco" Click="PomoWork_Click" FontSize="11"/>
                            <HyperlinkButton Content="Pausa" Click="PomoBreak_Click" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>

        <!-- Splash overlay (first launch + initialization). Hidden after bootstrap. -->
        <Grid x:Name="SplashOverlay" IsHitTestVisible="True" Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF05060A" Offset="0.0" />
                    <GradientStop Color="#FF0B1C3A" Offset="0.45" />
                    <GradientStop Color="#FF2C1240" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel x:Name="SplashContent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                <Border CornerRadius="999"
                        Background="#22FFFFFF"
                        Padding="14">
                    <Image Source="ms-appx:///Assets/SplashBackground.png"
                           Width="220"
                           Height="220"
                           Stretch="UniformToFill" />
                </Border>

                <StackPanel HorizontalAlignment="Center" Spacing="2">
                    <TextBlock Text="DDS StudyOS"
                               Foreground="White"
                               FontSize="38"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Deep Darkness Studios"
                               Foreground="#CCFFFFFF"
                               FontSize="12"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="SplashVersionText"
                               Text="v0.0.0"
                               Foreground="#99FFFFFF"
                               FontSize="11"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Width="360" Spacing="10" Margin="0,10,0,0">
                    <ProgressBar x:Name="SplashProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Height="6"
                                 Foreground="#FF7B61FF" />
                    <TextBlock x:Name="SplashStatusText"
                               Text="Iniciando..."
                               Foreground="#CCFFFFFF"
                               FontSize="12"
                               TextAlignment="Center"
                               TextWrapping="WrapWholeWords" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
