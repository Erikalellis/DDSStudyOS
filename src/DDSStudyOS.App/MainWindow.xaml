<Window
    x:Class="DDSStudyOS.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDSStudyOS.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <NavigationView
            x:Name="NavView"
            PaneDisplayMode="Left"
            IsPaneOpen="True"
            CompactModeThresholdWidth="0"
            ExpandedModeThresholdWidth="0"
            IsBackButtonVisible="Collapsed"
            SelectionChanged="NavView_SelectionChanged"
            ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="NavItemDashboard" Content="Dashboard" Icon="Home" Tag="dashboard" />
                <NavigationViewItem x:Name="NavItemCourses" Content="Cursos" Icon="Library" Tag="courses" />
                <NavigationViewItem x:Name="NavItemMaterials" Content="Materiais &amp; Certificados" Icon="Folder" Tag="materials" />
                <NavigationViewItem x:Name="NavItemAgenda" Content="Agenda" Icon="Calendar" Tag="agenda" />
                <NavigationViewItem x:Name="NavItemBrowser" Content="Navegador" Icon="Globe" Tag="browser" />
                <NavigationViewItem x:Name="NavItemSettings" Content="Configurações" Icon="Setting" Tag="settings" />
                <NavigationViewItem x:Name="NavItemDev" Content="Desenvolvimento" Icon="Contact" Tag="dev" />
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <Border BorderBrush="#33000000" BorderThickness="0,1,0,0" Padding="12">
                    <StackPanel Spacing="8">
                        <Border x:Name="ProfileCardBorder" Background="#221D4ED8" CornerRadius="8" Padding="10">
                            <StackPanel Spacing="2">
                                <TextBlock Text="Perfil ativo" FontSize="11" Opacity="0.8" />
                                <TextBlock x:Name="UserGreetingText" Text="Olá, estudante!" FontWeight="SemiBold" FontSize="14" />
                                <TextBlock x:Name="UserSubtitleText" Text="Configure seu cadastro inicial." FontSize="11" Opacity="0.8" />
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Pomodoro Focus" FontWeight="SemiBold" FontSize="12" Opacity="0.8"/>
                        <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                            <TextBlock x:Name="PomoTimerText" Text="25:00" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Consolas"/>
                            <Button x:Name="PomoActionBtn" Content="&#xE768;" FontFamily="Segoe MDL2 Assets" Click="PomoAction_Click" ToolTipService.ToolTip="Iniciar/Pausar"/>
                            <Button x:Name="PomoResetBtn" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Click="PomoReset_Click" ToolTipService.ToolTip="Parar"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                            <Button Content="Foco" Click="PomoWork_Click" FontSize="11"/>
                            <Button Content="Pausa" Click="PomoBreak_Click" FontSize="11"/>
                        </StackPanel>
                        <Button Content="Config. Pomodoro" Click="PomoSettings_Click" FontSize="11" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>

        <!-- Onboarding / "login" overlay (first run). -->
        <Grid x:Name="OnboardingOverlay" IsHitTestVisible="True" Visibility="Collapsed" RequestedTheme="Dark">
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SplashBackdrop.png" Stretch="UniformToFill" />
            </Grid.Background>
            <Grid.Resources>
                <SolidColorBrush x:Key="OnboardingInputBackgroundBrush" Color="#FF1A2542" />
                <SolidColorBrush x:Key="OnboardingInputBorderBrush" Color="#66FFFFFF" />
                <SolidColorBrush x:Key="OnboardingInputForegroundBrush" Color="#FFF7F9FF" />

                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="{StaticResource OnboardingInputForegroundBrush}" />
                    <Setter Property="Background" Value="{StaticResource OnboardingInputBackgroundBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource OnboardingInputBorderBrush}" />
                </Style>

                <Style TargetType="ComboBox">
                    <Setter Property="Foreground" Value="{StaticResource OnboardingInputForegroundBrush}" />
                    <Setter Property="Background" Value="{StaticResource OnboardingInputBackgroundBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource OnboardingInputBorderBrush}" />
                </Style>

                <Style TargetType="NumberBox">
                    <Setter Property="Foreground" Value="{StaticResource OnboardingInputForegroundBrush}" />
                    <Setter Property="Background" Value="{StaticResource OnboardingInputBackgroundBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource OnboardingInputBorderBrush}" />
                </Style>

                <Style TargetType="ToggleSwitch">
                    <Setter Property="Foreground" Value="{StaticResource OnboardingInputForegroundBrush}" />
                </Style>
            </Grid.Resources>
            <Rectangle Fill="#CC05060A" />

            <ScrollViewer HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollMode="Enabled"
                          VerticalScrollBarVisibility="Auto"
                          MaxWidth="760"
                          MaxHeight="860"
                          Margin="24">
                <Border Background="#D30A1228"
                        BorderBrush="#66FFFFFF"
                        BorderThickness="1"
                        CornerRadius="18"
                        Padding="22">
                    <StackPanel Spacing="14">
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border CornerRadius="999" Background="#22FFFFFF" Padding="10" VerticalAlignment="Top">
                                <Image Source="ms-appx:///Assets/SplashBackground.png"
                                       Width="56"
                                       Height="56"
                                       Stretch="UniformToFill" />
                            </Border>

                            <StackPanel Spacing="2">
                                <TextBlock Text="Bem-vinda(o) ao DDS StudyOS"
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="Crie seu perfil para personalizar a experiência. Você pode editar depois em Configurações."
                                           Foreground="#E6FFFFFF"
                                           FontSize="12"
                                           TextWrapping="WrapWholeWords" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Spacing="10">
                            <TextBox x:Name="OnboardingFullNameBox"
                                     Header="Nome completo"
                                     PlaceholderText="Ex.: Erika Lellis" />

                            <TextBox x:Name="OnboardingPreferredNameBox"
                                     Header="Como prefere ser chamada(o)"
                                     PlaceholderText="Ex.: Erika (opcional)" />

                            <TextBox x:Name="OnboardingEmailBox"
                                     Header="E-mail"
                                     PlaceholderText="exemplo@dominio.com (opcional)" />

                            <TextBox x:Name="OnboardingPhoneBox"
                                     Header="Telefone"
                                     PlaceholderText="(11) 90000-0000 (opcional)" />

                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.6*" />
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition Width="1.2*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="OnboardingCityBox"
                                         Grid.Column="0"
                                          Header="Cidade"
                                          PlaceholderText="Ex.: Osasco (opcional)" />
                                <TextBox x:Name="OnboardingStateBox"
                                         Grid.Column="1"
                                          Header="Estado"
                                          PlaceholderText="Ex.: SP (opcional)" />
                                <TextBox x:Name="OnboardingCountryBox"
                                         Grid.Column="2"
                                          Header="País"
                                          PlaceholderText="Ex.: Brasil (opcional)" />
                            </Grid>

                            <TextBox x:Name="OnboardingStudyAreaBox"
                                     Header="Área principal de estudo"
                                     PlaceholderText="Ex.: Desenvolvimento de Software (opcional)" />

                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="OnboardingExperienceLevelCombo"
                                          Grid.Column="0"
                                           Header="Nível atual"
                                           MinWidth="220">
                                    <x:String>Iniciante</x:String>
                                    <x:String>Intermediário</x:String>
                                    <x:String>Avançado</x:String>
                                </ComboBox>

                                <ComboBox x:Name="OnboardingStudyShiftCombo"
                                          Grid.Column="1"
                                           Header="Turno preferido"
                                           MinWidth="220">
                                    <x:String>Manhã</x:String>
                                    <x:String>Tarde</x:String>
                                    <x:String>Noite</x:String>
                                    <x:String>Madrugada</x:String>
                                    <x:String>Flexível</x:String>
                                </ComboBox>
                            </Grid>

                            <NumberBox x:Name="OnboardingDailyGoalNumber"
                                       Header="Meta diária (minutos)"
                                       Minimum="15"
                                       Maximum="720"
                                       Value="90"
                                       SpinButtonPlacementMode="Compact" />

                            <ToggleSwitch x:Name="OnboardingRemindersToggle"
                                          Header="Ativar lembretes"
                                          IsOn="True" />

                            <TextBox x:Name="OnboardingNotesBox"
                                     Header="Observações pessoais"
                                     PlaceholderText="Opcional"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="90" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <HyperlinkButton Content="Pular por agora" Click="OnboardingSkip_Click" />
                            <Button Content="Continuar" Click="OnboardingContinue_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- Splash overlay (first launch + initialization). Hidden after bootstrap. -->
        <Grid x:Name="SplashOverlay" IsHitTestVisible="True" Visibility="Visible">
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SplashBackdrop.png" Stretch="UniformToFill" />
            </Grid.Background>
            <Rectangle x:Name="SplashTintOverlay" Fill="#C2050612" />

            <StackPanel x:Name="SplashContent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,72"
                        Spacing="10">
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <Border x:Name="SplashChannelBadge"
                            HorizontalAlignment="Center"
                            CornerRadius="999"
                            Padding="12,4"
                            Background="#334AC277"
                            BorderBrush="#998CE8B3"
                            BorderThickness="1">
                        <TextBlock x:Name="SplashChannelBadgeText"
                                   Text="STABLE v0.0.0"
                                   Foreground="#FFE3FFEF"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                    </Border>
                    <TextBlock x:Name="SplashTitleText"
                               Text="Carregando DDS StudyOS"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="SplashVersionText"
                               Text="v0.0.0"
                               Foreground="#99FFFFFF"
                               FontSize="11"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Width="560" Spacing="10">
                    <ProgressBar x:Name="SplashProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Height="8"
                                 Foreground="#FF7B61FF" />
                    <TextBlock x:Name="SplashStatusText"
                               Text="Iniciando..."
                               Foreground="#CCFFFFFF"
                               FontSize="13"
                               TextAlignment="Center"
                               TextWrapping="WrapWholeWords" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Guided tour (first run). -->
        <TeachingTip x:Name="GuidedTourTip"
                     IsOpen="False"
                     IsLightDismissEnabled="False"
                     RequestedTheme="Dark"
                     Background="#FF111827"
                     BorderBrush="#FF365080"
                     BorderThickness="1"
                     MinWidth="320"
                     MaxWidth="440"
                     PreferredPlacement="Auto"
                     ActionButtonClick="GuidedTourTip_ActionButtonClick"
                     CloseButtonClick="GuidedTourTip_CloseButtonClick">
            <StackPanel Spacing="6" MaxWidth="420">
                <TextBlock x:Name="GuidedTourTitleText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#FFF6F7FB"
                           TextWrapping="WrapWholeWords" />
                <TextBlock x:Name="GuidedTourSubtitleText"
                           FontSize="13"
                           Foreground="#E6FFFFFF"
                           TextWrapping="WrapWholeWords" />
            </StackPanel>
        </TeachingTip>
    </Grid>
</Window>
