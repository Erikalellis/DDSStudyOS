<Page
    x:Class="DDSStudyOS.App.Pages.CoursesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Meus Cursos" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Gerencie seu aprendizado em um só lugar." Style="{StaticResource BodyTextBlockStyle}" Opacity="0.82"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Style="{StaticResource AccentButtonStyle}" Click="NewCourse_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" />
                            <TextBlock Text="Novo Curso"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Content="Sincronização">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Exportar favoritos do perfil" Click="ExportFavorites_Click"/>
                            <MenuFlyoutItem Text="Importar favoritos para este perfil" Click="ImportFavorites_Click"/>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem Text="Limpar histórico de estudo do perfil" Click="ClearProfileHistory_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content (Master-Detail View) -->
        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/> <!-- List -->
                <ColumnDefinition Width="*"/>   <!-- Details/Form -->
            </Grid.ColumnDefinitions>

            <!-- Left: Course List -->
            <Grid Grid.Column="0" RowDefinitions="Auto,*">
                <TextBox Grid.Row="0" x:Name="SearchBox" PlaceholderText="Buscar curso..." Margin="0,0,0,12" TextChanged="SearchBox_TextChanged"/>
                <ListView Grid.Row="1"
                          x:Name="CoursesList"
                          SelectionMode="Single"
                          IsItemClickEnabled="True"
                          ItemClick="CoursesList_ItemClick"
                          DoubleTapped="CoursesList_DoubleTapped"
                          SelectionChanged="CoursesList_SelectionChanged"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          BorderThickness="1"
                          CornerRadius="4">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Padding="12">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Platform}" FontSize="12" Opacity="0.82"/>
                                <TextBlock Text="{Binding FavoriteBadge}" FontSize="11" Foreground="#FFD28A00"/>
                                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" HorizontalAlignment="Left" CornerRadius="4" Padding="4,2" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding Status}" FontSize="10"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Right: Details / Editor -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Detalhes"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Opacity="0.85"
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <!-- Empty State -->
                    <Border x:Name="EmptyStateCard"
                            Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8"
                            Padding="24"
                            Visibility="Visible">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Selecione um curso na lista"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Dica: clique em “Novo Curso” para cadastrar. Para editar um curso existente, selecione e clique em “Editar”."
                                       Opacity="0.75"
                                       TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Border>

                    <!-- Read-only Details -->
                    <Border x:Name="DetailsCard"
                            Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8"
                            Padding="24"
                            Visibility="Collapsed">
                        <StackPanel Spacing="14">
                            <StackPanel Spacing="2">
                                <TextBlock x:Name="DetailsTitleText"
                                           Text="Curso"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock x:Name="DetailsPlatformText" Text="Plataforma" Opacity="0.9"/>
                            </StackPanel>

                            <Grid ColumnSpacing="12" RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="2">
                                    <TextBlock Text="Status" FontSize="12" Opacity="0.88"/>
                                    <TextBlock x:Name="DetailsStatusText" Text="-" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="2">
                                    <TextBlock Text="Usuário" FontSize="12" Opacity="0.88"/>
                                    <TextBlock x:Name="DetailsUsernameText" Text="-" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="2">
                                    <TextBlock Text="Link" FontSize="12" Opacity="0.88"/>
                                    <TextBlock x:Name="DetailsUrlText" Text="-" TextWrapping="WrapWholeWords"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="2">
                                    <TextBlock Text="Observações" FontSize="12" Opacity="0.88"/>
                                    <TextBlock x:Name="DetailsNotesText" Text="-" Opacity="1" TextWrapping="WrapWholeWords"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                <Button x:Name="DetailsOpenBtn" Content="Abrir" Style="{StaticResource AccentButtonStyle}" Click="DetailsOpen_Click"/>
                                <Button x:Name="DetailsFavoriteBtn" Content="Favoritar" Click="DetailsFavorite_Click"/>
                                <Button x:Name="DetailsEditBtn" Content="Editar" Click="DetailsEdit_Click"/>
                                <Button x:Name="DetailsDeleteBtn" Content="Excluir" Click="DetailsDelete_Click" Foreground="Red" BorderBrush="Red"/>
                            </StackPanel>

                            <TextBlock x:Name="DetailsMsgText"
                                       Text=""
                                       Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                                       FontWeight="SemiBold"
                                       TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Border>

                    <!-- Editor -->
                    <ScrollViewer x:Name="EditorScroll" Visibility="Collapsed">
                        <StackPanel Spacing="16" MaxWidth="600" HorizontalAlignment="Left">
                            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="24">
                                <StackPanel Spacing="16">
                                    <TextBlock x:Name="FormTitle" Text="Novo Curso" Style="{StaticResource SubtitleTextBlockStyle}"/>

                                    <TextBox x:Name="NameBox" Header="Nome do Curso" PlaceholderText="Ex: Python Completo 2026"/>
                                    <TextBox x:Name="PlatformBox" Header="Plataforma" PlaceholderText="Ex: Udemy, Coursera"/>
                                    <TextBox x:Name="UrlBox" Header="Link de Acesso" PlaceholderText="https://..."/>

                                    <Grid ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="UsernameBox" Header="Login (Usuário)" PlaceholderText="seu@email.com"/>
                                        <PasswordBox Grid.Column="1" x:Name="PasswordBox" Header="Senha (deixe em branco para manter a atual)"/>
                                    </Grid>

                                    <ComboBox x:Name="StatusBox" Header="Status Atual" SelectedIndex="0" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Em Andamento" Tag="fazendo"/>
                                        <ComboBoxItem Content="Concluído" Tag="concluido"/>
                                        <ComboBoxItem Content="Pausado" Tag="pausado"/>
                                    </ComboBox>

                                    <TextBox x:Name="NotesBox" Header="Observações Rápidas" AcceptsReturn="True" TextWrapping="Wrap" Height="80" PlaceholderText="Anotações sobre login ou progresso..."/>

                                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                                        <Button x:Name="SaveBtn" Content="Salvar" Style="{StaticResource AccentButtonStyle}" Click="Save_Click"/>
                                        <Button Content="Cancelar" Click="CancelEdit_Click"/>
                                    </StackPanel>

                                    <TextBlock x:Name="MsgText" Text="" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
