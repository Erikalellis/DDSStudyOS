<Page
    x:Class="DDSStudyOS.App.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,*">
        <TextBlock Text="Configurações" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,24"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="32" MaxWidth="800" HorizontalAlignment="Left">
                
                <!-- Backup Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Backup &amp; Exportação" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <PasswordBox x:Name="MasterPassBox" Header="Senha Mestra (Recomendado)" />
                            <TextBox x:Name="PathBox" Header="Caminho do Arquivo" PlaceholderText="C:\...\ddsstudyos-backup.json" />
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button Content="Exportar Backup" Click="Export_Click" Style="{StaticResource AccentButtonStyle}" />
                                <Button Content="Restaurar Backup" Click="Import_Click" />
                                <Button Content="Validar Backup" Click="ValidateBackup_Click" />
                            </StackPanel>
                            
                            <InfoBar x:Name="WarnBar" Title="Segurança" Message="Sem senha mestra, o arquivo exportado conterá senhas em texto plano. Proteja seus dados." IsOpen="True" Severity="Warning" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Privacy & Maintenance -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Privacidade &amp; Manutenção" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <ToggleSwitch x:Name="DownloadsToggle" Header="Organização automática de downloads" Toggled="DownloadsToggle_Toggled" OffContent="Desativado" OnContent="Ativado"/>
                            <Button Content="Limpar Cache do Navegador" Click="ClearCache_Click" Foreground="Red" BorderBrush="Red"/>
                            <TextBlock Text="Isso removerá cookies e sessões ativas do navegador interno." FontSize="12" Opacity="0.6"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Diagnostics -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Diagnóstico de Release" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <TextBox x:Name="DiagPathBox" Header="Pasta para exportar diagnóstico" PlaceholderText="C:\...\Desktop" />

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button Content="Executar Diagnóstico" Click="RunDiagnostics_Click" />
                                <Button Content="Exportar Diagnóstico (.zip)" Click="ExportDiagnostics_Click" Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>

                            <TextBlock x:Name="DiagSummaryText" Text="Nenhum diagnóstico executado ainda." TextWrapping="Wrap" Opacity="0.85"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- About -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Sobre" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="DDS StudyOS" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="VersionText" Text="Versão -" Opacity="0.8"/>
                            <TextBlock x:Name="CompanyText" Text="Desenvolvido por Deep Darkness Studios" Opacity="0.6"/>
                            <HyperlinkButton Content="Visitar Site Oficial" NavigateUri="https://177.71.165.60/"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Status Output -->
                <TextBlock x:Name="MsgText" Text="" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" FontWeight="SemiBold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
